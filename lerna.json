{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "useNx": true,
  "useWorkspaces": true,
  "npmClient": "yarn",
  "command": {
    "publish": {
      "message": "chore(release): publish %s"
    }
  },
  "packages": [
    "packages/*"
  ],
  "ignoreChanges": [
    "packages/vantui-demo/**",
    "**/*.md",
    "**/__test__/**"
  ],
  "version": "2.5.0"
}
